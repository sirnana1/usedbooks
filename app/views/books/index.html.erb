<% provide(:title, "Books") %>
<div id="books-index">
  <% @books.each_slice(4) do |book| %>
  <div class="row">
    <% book.each do |book| %>
    <div class ="row">
      <div class="col-md-3 col-sm-3">
        <h3><%=book.title%></h3>
        <%= link_to 'Go to Book Info', book_path(book),
         class: 'btn btn-primary' %>
    </div>
   <%end%>

  </div>
    <% end %>
</div>
