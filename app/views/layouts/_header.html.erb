<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "USED BOOKS", root_path , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <!-- Home -->
        <li><%= link_to root_path do %>
          <i class="glyphicon glyphicon-home"></i>
          Home
        <% end %>
        </li>
        <% if logged_in? %>
        <li><% link_to "Users", users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Account | Add New <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Book", new_book_path %></li>
            <li><%= link_to "Category", new_category_path %></li>
            <li><%= link_to "Author", new_author_path %></li>
            <li><%= link_to "Publisher", new_publisher_path %></li>
            <li class="divider"></li>
            <li>
              <%= link_to logout_path, method: :delete  do %>
              <i class="glyphicon glyphicon-off"></i>
               Log out
              <%end%>
            </li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Manage <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Categories", categories_path %></li>
            <li><%= link_to "Authors", authors_path %></li>
            <li><%= link_to "Publishers", publishers_path %></li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to login_path  do %>
          <i class="glyphicon glyphicon-log-out"></i>
          Log In
          <% end %>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
